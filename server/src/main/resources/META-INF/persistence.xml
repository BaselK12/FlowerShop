<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="flowershopPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- your entities -->
        <class>il.cshaifasweng.OCSFMediatorExample.server.model.Employee</class>

        <properties>
            <!-- Use BOTH jakarta.* and hibernate.connection.* to remove all doubt -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/flowershop?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/flowershop?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>

            <!-- Schema generation (dev) -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Dialect hint is optional; Hibernate can detect it -->
            <!-- <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/> -->
        </properties>
    </persistence-unit>
</persistence>
