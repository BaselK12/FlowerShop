<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.Account.ComplaintDetailsReadOnlyController"
            prefWidth="900" prefHeight="560">

    <top>
        <HBox spacing="12" alignment="CENTER_LEFT">
            <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>
            <Label text="Complaint"/>
            <Label fx:id="statusChip"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Close" onAction="#closeWindow"/>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.38">
            <items>
                <VBox spacing="10">
                    <padding><Insets top="14" right="14" bottom="14" left="14"/></padding>
                    <GridPane hgap="10" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints minWidth="90" halignment="RIGHT"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="Complaint ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="idLbl"        GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Email:"        GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="emailLbl"     GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Phone No.:"    GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label fx:id="phoneLbl"     GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Order ID:"     GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label fx:id="orderLbl"     GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Store:"        GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <Label fx:id="storeLbl"     GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="Created At:"   GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <Label fx:id="createdLbl"   GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                    </GridPane>
                </VBox>

                <VBox spacing="10">
                    <padding><Insets top="14" right="14" bottom="14" left="14"/></padding>

                    <Label text="Subject"/>
                    <Label fx:id="subjectLbl" wrapText="true"/>

                    <Label text="Description"/>
                    <TextArea fx:id="descriptionArea" editable="false" prefRowCount="6"/>

                    <Label text="Resolution Notes"/>
                    <TextArea fx:id="resolutionArea" editable="false" prefRowCount="6"/>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
