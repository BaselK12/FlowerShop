<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720" prefWidth="1100" stylesheets="@../../../../../Styles/HomePage.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.HomePage.HomePageController">

   <!-- Top navigation -->
   <top>
      <HBox alignment="CENTER_RIGHT" spacing="20" BorderPane.alignment="CENTER">
         <children>
            <Label style="-fx-font-size:18; -fx-font-weight:bold;" text="Flower Shop" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="16" />
               </HBox.margin>
            </Label>
            <Button fx:id="btnHome" text="Home" />
            <Button fx:id="btnCatalog" text="Catalog" />
            <Button fx:id="btnCart" text="Cart" />
            <Button fx:id="btnAccount" managed="false" text="My Account" visible="false" />
            <Button fx:id="btnLogin" text="Login" />
            <Button fx:id="btnAdmin" text="Admin" />
         </children>
         <padding><Insets bottom="12" left="16" right="16" top="12" /></padding>
         <style>-fx-background-color: #fdeef2;</style>
      </HBox>
   </top>

   <!-- Center content sits inside a StackPane the controller can add overlays to -->
   <center>
      <StackPane fx:id="centerStack">
         <children>

            <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;">
               <content>
                  <VBox alignment="TOP_CENTER" spacing="24">
                     <!-- Hero / banner -->
                     <VBox alignment="CENTER" maxWidth="900" spacing="12" style="-fx-background-color: linear-gradient(to bottom, #fff6f9, #fbe5e9);                                          -fx-border-color: #efc4cf; -fx-border-radius: 10; -fx-background-radius: 10;">
                        <padding><Insets bottom="30" left="30" right="30" top="30" /></padding>
                        <children>
                           <Label style="-fx-font-size:28; -fx-font-weight:bold; -fx-text-fill:#cf6789;" text="Welcome to Our Flower Shop!" />
                           <Label style="-fx-text-fill:#7a6870;" text="Fresh &amp; Beautiful Flowers, Delivered Straight to Your Doorstep." />
                           <Button fx:id="btnShopNow" style="-fx-font-weight:bold;" text="Shop Now" />
                        </children>
                     </VBox>

                     <!-- Featured section -->
                     <VBox alignment="TOP_CENTER" maxWidth="1000" spacing="12">
                        <children>
                           <Label style="-fx-text-fill:#cf6789; -fx-font-size:18; -fx-font-weight:bold;" text="Featured Flowers" />
                           <HBox fx:id="cardsRow1" alignment="CENTER_LEFT" spacing="16">
                              <padding><Insets left="8" right="8" /></padding>
                           </HBox>
                        </children>
                     </VBox>
                  </VBox>
               </content>
            </ScrollPane>

         </children>
         <padding><Insets bottom="16" left="16" right="16" top="16" /></padding>
      </StackPane>
   </center>

   <!-- Footer -->
   <bottom>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label style="-fx-text-fill:#8f7e84;" text="Â© 2025 Flower Shop | Contact: info@flowershop.com" />
         </children>
         <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
         <style>-fx-background-color: #fdeef2;</style>
      </HBox>
   </bottom>

</BorderPane>
