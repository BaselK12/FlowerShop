<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="fromBox" maxWidth="450.0" prefHeight="200.0" prefWidth="450.0" styleClass="form-container" stylesheets="@../../../../../Styles/add-edit-flower.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.Admin.AddEditFlowerController">
   <children>
      <Label alignment="CENTER" styleClass="title-label" text="Add /Edit Flower" />
      <VBox fx:id="fieldBox" prefHeight="493.0" prefWidth="390.0" spacing="10.0" VBox.vgrow="NEVER">
         <children>
            <Label fx:id="lblSku" text=" SKU (unique ID)" />
            <TextField fx:id="skuField" maxWidth="1.7976931348623157E308" prefWidth="420.0" promptText="e.g. FL123" />
            <Label fx:id="lblName" text="Name" />
            <TextField fx:id="nameField" maxWidth="1.7976931348623157E308" prefWidth="420.0" promptText="e.g. Red Roses" />
            <Label fx:id="lblDescription" text="Description" />
            <TextArea fx:id="descriptionArea" minHeight="68.0" prefHeight="100.0" prefRowCount="4" prefWidth="390.0" promptText="Short Description" wrapText="true" />
            <Label fx:id="lblPrice" text="Price" />
            <TextField fx:id="priceField" promptText="e.g. 120.00" />
            <Label fx:id="lblImage" text="Choose Image" />
            <HBox fx:id="imagePickerRow" alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="btnChooseImage" mnemonicParsing="false" prefHeight="36.0" styleClass="btn-outline" text="Choose Image" />
                  <Label fx:id="choosenFileLabel" alignment="BASELINE_LEFT" text="No File Chosen" />
               </children>
            </HBox>
         </children>
      </VBox>
      <StackPane fx:id="imagePreviewBox" prefHeight="180.0" prefWidth="200.0" styleClass="image-preview">
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
         <children>
            <ImageView fx:id="previewImage" fitHeight="172.0" fitWidth="420.0" preserveRatio="true" />
         </children>
      </StackPane>
      <HBox fx:id="buttonRow" alignment="CENTER_RIGHT" minHeight="60.0" prefHeight="40.0" prefWidth="430.0" spacing="12.0" styleClass="btn-row">
         <children>
            <Button fx:id="btnCancel" maxHeight="36.0" minWidth="90.0" mnemonicParsing="false" prefHeight="36.0" styleClass="btn-outline" text="Cancel" />
            <Button fx:id="btnSave" minWidth="90.0" mnemonicParsing="false" prefWidth="30.0" styleClass="btn-primary" text="Save" />
         </children>
      </HBox>
   </children>
</VBox>
